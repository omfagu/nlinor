<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.nlinor.ui.controller.StockController">
    <TextField fx:id="nameField" promptText="Ürün Adı" />
    <TextField fx:id="priceField" promptText="Fiyat" />
    <TextField fx:id="quantityField" promptText="Adet" />
    <Button fx:id="addButton" text="Ekle" onAction="#addProduct" />
    <ListView fx:id="productList" />



</VBox>
